                        <Button.CommandParameter>
                            <system:Boolean>True</system:Boolean>
                        </Button.CommandParameter>
                    </Button>
                    <Button Width="100" Margin="10" Content="Нет" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" FontSize="17">
                    </Button>
                </StackPanel>
            </StackPanel>
        </materialDesign:DialogHost>
    </DataTemplate>

