                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Button Content="{materialDesign:PackIcon PlaylistPlus}" Command="{Binding Path=PlusDetail}" ToolTip="Добавить деталь"/>
                    <Button Content="{materialDesign:PackIcon PlaylistMinus}" Command="{Binding Path=MinusDetail}" Margin="15 0" ToolTip="Убрать деталь"/>
                    <Button Style="{StaticResource MaterialDesignFloatingActionButton}" materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="{Binding Path=ProgressIsIndeterminateFileDetail}"
                            Content="{materialDesign:PackIcon Upload}" Command="{Binding Path=AddScanDetail}" materialDesign:ButtonProgressAssist.IndicatorForeground="Aqua"
                            Width="40" Height="40" HorizontalAlignment="Left" ToolTip="Добавить обновленный скан"/>
                </StackPanel>
                <materialDesign:Card Background="{DynamicResource MaterialDesignBackground}" Margin="10" Foreground="Black">
                    <StackPanel>
                        <Expander HorizontalAlignment="Stretch" Header="Список деталей, входящих в извещение" IsExpanded="True">
                            <StackPanel Orientation="Vertical" Margin="10 0">
                                <TextBlock Text="Архив" Margin="2"/>
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ListBox ItemsSource="{Binding Path=NoticeDetails, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding Path=SelectNoticeDetail}" MaxHeight="200">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>

                                                    <ToggleButton VerticalAlignment="Center" IsChecked="{Binding SetArchive}" Style="{StaticResource MaterialDesignActionLightToggleButton}"
                                                                              Content="{materialDesign:PackIcon CheckboxBlankCircleOutline}" />
                                                    <StackPanel Margin="8 0 0 0" Grid.Column="1">
                                                        <TextBlock FontWeight="Bold" Text="{Binding NumberAndName}" TextWrapping="Wrap" MaxWidth="350"/>
                                                        <TextBlock Text="{Binding DescriptionFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" MaxWidth="350"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="2">
                                                        <RadioButton Content="(Изменение скана)" IsChecked="{Binding IsScan}"/>
                                                        <RadioButton IsChecked="{Binding IsAddApplicability}">
                                                            <RadioButton.Content>
                                                                <TextBlock Text="{Binding Path=ContentRadioButtonAdd}" TextWrapping="Wrap" MaxWidth="200"/>
                                                            </RadioButton.Content>
                                                        </RadioButton>
                                                        <RadioButton  IsChecked="{Binding IsDeleteApplicability}">
                                                            <RadioButton.Content>
                                                                <TextBlock Text="{Binding Path=ContentRadioButtonDelete}" TextWrapping="Wrap" MaxWidth="200"/>
                                                            </RadioButton.Content>
                                                        </RadioButton>
                                                        <RadioButton Content="(Аннулировано)" IsChecked="{Binding IsArchive}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </ScrollViewer>
                            </StackPanel>
                        </Expander>
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 20">
                            <Button Width="110" Margin="10" Content="Добавить" FontSize="17" Command="{Binding Path=AddCommand}"/>
                            <Button Width="110" Margin="10" Content="Отмена" FontSize="17" Command="{Binding Path=CloseCommand}"/>
                        </StackPanel>
                        <ProgressBar Style="{DynamicResource MaterialDesignCircularProgressBar}" HorizontalAlignment="Center"
                                     IsIndeterminate="{Binding Path=ProgressIsIndeterminate}" Value="0" />
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </materialDesign:DialogHost>
    </DataTemplate>

    <!-- Окно удаления адреса -->
    <DataTemplate DataType="{x:Type dialogWindows:DeleteAddress}">
        <materialDesign:DialogHost CloseOnClickAway="True" Identifier="DeleteAddress">
            <StackPanel Margin="20" Width="500">
                <StackPanel Margin="10">
                    <TextBlock Text="{Binding Path=Title}" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20"/>
                </StackPanel>
                <ListBox ItemsSource="{Binding Path=Adresses}" MaxHeight="200">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="Checkerz" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding Path=IsDelete}"/>
                                <StackPanel Margin="8 0 0 0" Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock FontWeight="Bold" Text="{Binding AdressText}" TextWrapping="Wrap" FontSize="15"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 20">
                    <Button Width="110" Margin="10" Content="Удалить" FontSize="17" Command="{Binding Path=DeleteCommand}"/>
                    <Button Width="110" Margin="10" Content="Отмена" FontSize="17" Command="{Binding Path=CloseCommand}"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:DialogHost>
    </DataTemplate>

    <!-- Окно подключения -->
    <DataTemplate DataType="{x:Type dialogWindows:UserConnection}">
        <materialDesign:DialogHost CloseOnClickAway="True" Identifier="UserConnection">
            <StackPanel Margin="20" Width="500">
                <StackPanel Margin="10">
                    <TextBlock Text="Подключение к серверу" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20"/>
                </StackPanel>
                <StackPanel>
                    <TextBox Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" TextWrapping="Wrap" HorizontalAlignment="Center" Width="400" Margin="10 0" FontSize="20"
                             materialDesign:HintAssist.Hint="Введите логин" Text="{Binding Path=UserName}"/>
                    <TextBox Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="10 20" Width="400" FontSize="20"
                             materialDesign:HintAssist.Hint="Введите пароль" Text="{Binding Path=UserPassword}"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 20">
                    <Button Width="150" Height="40" Margin="10" Content="Подключиться" FontSize="17" Command="{Binding Path=AddCommand}"/>
                    <Button Width="150" Height="40" Margin="10" Content="Отмена" FontSize="17" Command="{Binding Path=CloseCommand}"/>
                </StackPanel>
                <ProgressBar Style="{DynamicResource MaterialDesignCircularProgressBar}" HorizontalAlignment="Center"
                             IsIndeterminate="{Binding Path=ProgressIsIndeterminate}" Value="0" />
            </StackPanel>
        </materialDesign:DialogHost>
    </DataTemplate>
</ResourceDictionary>