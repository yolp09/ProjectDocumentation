                    </StackPanel>
                    <TextBlock FontSize="17" Text="{Binding Path=UploadedFileInformation}" Margin="10 0" VerticalAlignment="Center" TextWrapping="Wrap" MaxWidth="400"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 20">
